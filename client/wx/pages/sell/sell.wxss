/* pages/sell/sell.wxss */
.sellTop{
  width: 100%;
  display: flex;
  flex-direction: row;
}
.Top{
  width: 100%;
  height: 50rpx;
}
.topLeft{
  display: flex;
  flex-direction: column;
  background-color:#FFFBEF; 
}

.sellsider{
  background-color:#fff;
}


.items{
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #8F8F85;
  font-size: 36rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp:1;
  -webkit-box-orient:vertical;
  border-bottom: 2rpx solid #BDBDBD;
}
.Right{
  display: flex;
  flex-direction: column;
}
.topRight{ 
  margin-left: 20rpx;
  margin-right: 10rpx;
  display: flex;
  flex-direction: column;
}
.rightBox{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.boxTitle{
  font-size: 32rpx;
  height: 30rpx;
  margin: 0 auto;
}
.boxinfor01{
  width: 650rpx;
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
}
.boxinfor{
  width: 650rpx;
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  border-bottom: 2rpx solid #BDBDBD;
}
.boximg image{
  margin: 20rpx;
  width: 100rpx;
  height: 100rpx;
}
.descTitle{
  font-size: 36rpx;
  width:430rpx; 
}
.description{
  font-size: 24rpx;
  color: #B1B1B3;
  width:430rpx; 
}
.descbottom{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 400rpx;
}
.descbottom view:first-child{
  color: #F4B275;
  font-size: 36rpx;
}
.add{
  height: 40rpx;
  width: 40rpx;
  background-color: #fff;
  border: 4rpx solid #BDBDBD;
  border-radius: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}
.add>image{
  width: 30rpx;
  height: 30rpx;
  color: #F4B275; 
}

.sellBottom{
  width: 750rpx;
  box-shadow: 0rpx 2rpx 10rpx #BDBDBD;
  position: absolute;
  bottom: 0rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.bottomLeft{
  display: flex;
  flex-direction: row;
}
.bottomimg{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50rpx;
  background-color: #747A86;
  margin: -30rpx 0 0 50rpx;
}
.bottomimg image{
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx;
}
.leftmoneny{
  font-size: 50rpx;
  color: #DBB685;
  margin: 10rpx 0 0 10rpx;
}
.bottomRight{
  width: 280rpx;
  background-color: #CED1D8;
  line-height: 100rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
}